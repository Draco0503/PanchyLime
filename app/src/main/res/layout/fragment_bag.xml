<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/view_shape"
    tools:context=".fragments.BagFragment">

    <TextView
        android:id="@+id/fragBag_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="21dp"
        android:fontFamily="@font/pixeled"
        android:text="@string/fragBag_title"
        android:textAlignment="center"
        android:textColor="@color/nuclear_green"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv0"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/selected_card_view"
                    android:padding="10dp"
                    tools:src="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/card_view"
                    android:padding="10dp"
                    tools:src="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/card_view"
                    android:padding="10dp"
                    tools:src="@tools:sample/avatars" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/card_view"
                    android:padding="10dp"
                    tools:src="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/iv4"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/card_view"
                    android:padding="10dp"
                    tools:src="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/iv5"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/card_view"
                    android:padding="10dp"
                    tools:src="@tools:sample/avatars" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv6"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/card_view"
                    android:padding="10dp"
                    tools:src="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/iv7"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/card_view"
                    android:padding="10dp"
                    tools:src="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/iv8"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/card_view"
                    android:padding="10dp"
                    tools:src="@tools:sample/avatars" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv9"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/card_view"
                    android:padding="10dp"
                    tools:src="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/iv10"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/card_view"
                    android:padding="10dp"
                    tools:src="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/iv11"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/card_view"
                    android:padding="10dp"
                    tools:src="@tools:sample/avatars" />

            </TableRow>


        </TableLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>